{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
